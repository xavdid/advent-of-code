---
import { type CollectionEntry, getCollection } from "astro:content";
import Solution from "../../layouts/Solution.astro";

export async function getStaticPaths() {
  const writeups = await getCollection("writeups");
  return writeups.map((writeup) => ({
    params: { slug: writeup.slug },
    props: writeup,
  }));
}
type Props = CollectionEntry<"writeups">;

const writeup = Astro.props;
const { Content } = await writeup.render();
---

<Solution {...writeup.data}>
  <Content />
</Solution>
